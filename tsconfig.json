{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "jsx": "react",
    "rootDir": "./src/",
    "outDir": "./build/",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "./node_modules",
    "./tests"
  ]
}