{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "jsx": "react",
    "rootDir": "./src/",
    "outDir": "./build/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    //    "noEmit": true,
    "strict": true,
    "strictNullChecks": false,
    //    "isolatedModules": true,
    "types": [
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./build/**",
    "./node_modules/**",
    "./tests/**"
  ]
}